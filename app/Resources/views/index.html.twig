{% extends 'layout.html.twig' %}

{% block header %}
<!-- Page Header -->
<header class="masthead" style="background-image: url('{{ asset('theme/img/home-bg.jpg') }}')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>1, 2, 3... évaluez!</h1>
          <span class="subheading">Recherchez un produit par code barre</span>
          <form method="post" action="{{ path('search') }}">
              {{ form_widget(form.code_barre) }}
              <input type="submit" class="btn btn-primary" value="Go!" />
              {{ form_end(form) }}
          </form>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}

{% block contents %}
<div class="row">
    <div class="col-lg-12">
        <h2>Mieux notés</h2>
    </div>

    {% for product in eight_bests %}
        <div class="product col-lg-3 p-1">
            <a href="{{ path('product', { 'code': product['code'] }) }}"><img src="{{ product['product']['image_small_url'] }}" /></a><br />
            <p>
                {{ product['product']['product_name'] }}
            </p>
        </div>
    {% endfor %}

    <div class="col-lg-12">
        <h2>Consultés récemment</h2>
    </div>

    {% for product in products %}
    <div class="product col-lg-3 p-1">
        <a href="{{ path('product', { 'code': product['code'] }) }}"><img src="{{ product['product']['image_small_url'] }}" /></a><br />
        <p>
            {{ product['product']['product_name'] }}
        </p>
    </div>
    {% endfor %}
</div>
{% endblock %}
